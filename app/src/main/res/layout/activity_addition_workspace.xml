<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdditionWorkspace">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DCDCDC"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.209"
            tools:context=".MainActivity">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/workspace_instruction_1"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/workspace_instruction_2"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:padding="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="@color/cardview_dark_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/questionBodyMultiplicationWorkspace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/question_fetching"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="35sp" />
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.372">
                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/carry_digit_1"
                    android:background="@drawable/additional_digit_disable"
                    android:gravity="center"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.531"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/carry_digit_2"
                    android:background="@drawable/additional_digit_disable"
                    android:gravity="center"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.531"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />


                <EditText
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/carry_digit_3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTextPrimary"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/additional_digit_disable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/carry_digit_4"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTextPrimary"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/additional_digit_disable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.797"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

            </LinearLayout>
            <Space
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.372">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/number1_digit1"
                    android:background="@drawable/digit_disable"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:focusableInTouchMode="false"
                    android:onClick="questionEnable"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.531"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/number1_digit2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:background="@drawable/digit_disable"
                    android:onClick="questionEnable"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/number1_digit3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:background="@drawable/digit_disable"
                    android:onClick="questionEnable"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.797"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

            </LinearLayout>
            <Space
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.372">
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/addition"/>
                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/number2_digit1"
                    android:background="@drawable/digit_disable"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:inputType="number"
                    android:focusableInTouchMode="false"
                    android:textSize="20sp"
                    android:onClick="questionEnable"
                    android:maxLength="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.531"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/number2_digit2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:background="@drawable/digit_disable"
                    android:onClick="questionEnable"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/number2_digit3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:background="@drawable/digit_disable"
                    android:onClick="questionEnable"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.797"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

            </LinearLayout>
            <Space
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="@color/colorTextPrimary"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.372">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/answer_digit1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:background="@drawable/digit_disable"
                    android:textColor="@color/colorTextPrimary"
                    android:onClick="answerEnable"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.797"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />
                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/answer_digit2"
                    android:background="@drawable/digit_disable"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorTextPrimary"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:onClick="answerEnable"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.531"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/answer_digit3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextPrimary"
                    android:maxLength="1"
                    android:background="@drawable/digit_disable"
                    android:onClick="answerEnable"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="5dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/answer_digit4"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:background="@drawable/digit_disable"
                    android:textColor="@color/colorTextPrimary"
                    android:onClick="answerEnable"
                    android:focusableInTouchMode="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.797"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.353" />

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardMaxElevation="20dp"
                android:padding="10dp"
                android:background="@color/cardview_dark_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/evaluateAdditionWorkspace"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:fadingEdgeLength="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="checkBlocks"
                    android:text="@string/evaluate"
                    android:textColor="@color/colorTextPrimary" />
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="20dp"
                android:padding="10dp"
                android:background="@color/cardview_dark_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/saveAnswerAddition"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:fadingEdgeLength="5dp"
                    android:visibility="gone"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="saveAnswer"
                    android:text="Save answer"
                    android:textColor="@color/colorTextPrimary" />
            </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"/>

                <Button
                    style="@style/Widget.AppCompat.Button"
                    android:id="@+id/refreshAdditionWorkspace"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_refresh_black_24dp"
                    android:fadingEdgeLength="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="repaint"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>


    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>